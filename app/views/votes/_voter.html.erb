<% if policy(Vote.new).create? %>
  <div class="vote-arrows pull-left">
    <div class><%= link_to " ", topic_post_up_vote_path(topic, post), class: 'glyphicon glyphicon-chevron-up' %></div>
    <div><strong><%= post.points %></strong></div>
    <div><%= link_to " ", topic_post_down_vote_path(topic, post), class: 'glyphicon glyphicon-chevron-down' %></div>
  </div>
<% end %>